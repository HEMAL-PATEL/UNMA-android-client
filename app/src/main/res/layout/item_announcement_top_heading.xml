<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_announcement_item"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_calendar"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_unread"
            android:textSize="16sp"
            android:text="TextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Teratas Hari ini"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/bg_top_today_date"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:text="15 Dec"/>
    </LinearLayout>

    <TextView
        android:id="@+id/anc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/anc_title"
        android:text="TextView"
        android:ellipsize="end"
        android:maxLines="5"
        android:textSize="20sp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

    <TextView
        android:id="@+id/publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:layout_column="0"
        android:layout_row="2"
        android:textColor="@color/sub_text"
        android:text="TextView"/>

    <LinearLayout
        android:id="@+id/attachment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_attachment"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginTop="12dp"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="2">
        <ImageView
            android:id="@+id/file_type_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_file_unknown"/>

        <TextView
            android:id="@+id/attachment_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:text="attachment file name ere"/>
    </LinearLayout>
</GridLayout>