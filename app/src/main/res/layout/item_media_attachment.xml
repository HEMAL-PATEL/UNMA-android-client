<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_announcement_item">

    <ImageView
        android:id="@+id/file_type_image"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_file_unknown"/>

    <TextView
        android:id="@+id/attachment_filename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/anc_title"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/attachment_download"
        app:layout_constraintStart_toEndOf="@+id/file_type_image"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--<TextView-->
        <!--android:id="@+id/anc_title"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginEnd="16dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:maxLines="1"-->
        <!--android:ellipsize="end"-->
        <!--android:text="TextView"-->
        <!--android:textSize="12sp"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toEndOf="@+id/file_type_image"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/attachment_filename"/>-->

    <TextView
        android:id="@+id/file_ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/file_type_image"
        app:layout_constraintTop_toBottomOf="@+id/attachment_filename"/>

    <TextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/file_ext"
        app:layout_constraintTop_toBottomOf="@+id/attachment_filename"/>

    <FrameLayout
        android:id="@+id/attachment_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/download_btn"
            android:layout_width="36dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_announcement_item"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_download"/>

        <ImageView
            android:id="@+id/offline_pin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_offline_pin"
            android:tint="@color/color_unread"
            android:visibility="gone"/>

        <com.github.lzyzsd.circleprogress.CircleProgress
            android:id="@+id/download_progress"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:circle_finished_color="@color/color_unread"
            app:circle_text_size="12sp"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>